{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "es7", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "strictNullChecks": false,
    "declarationDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
